<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsScores</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/MyTestWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="w3-top">
  <div class="w3-bar w3-black w3-card w3-left-align w3-large">
    <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-red"
      href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu">
      < class="fa fa-bars"></>
    </a>
    <a href="/Index" class="w3-bar-item w3-button w3-padding-large w3-hover-white" style="width: 13%; color: white">Home</a>
    <a href="/NFL" class="w3-bar-item w3-button w3-padding-large w3-hover-white" style="width: 13%; color: white">NFL</a>
    <a href="/NBA" class="w3-bar-item w3-button w3-padding-large w3-hover-white" style="width: 13%; color: white">NBA</a>
    <a href="/MLB" class="w3-bar-item w3-button w3-padding-large w3-hover-white" style="width: 13%; color: white">MLB</a>
    <a href="/NHL" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white"
      style="width: 13%; color: white">NHL</a>
    <a id="id02" href="/MongoDb/Index" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white"
      style="width: 10%; float: right; color: white; display: none">Account Home</a>
    <a id="id03" onclick=loginOn() class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white"
      style="width: 10%; float: right; color: white">Sign Up</a>
    <a id="id04" onclick="document.getElementById('id01').style.display='block'" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white"
      style="width: 10%; float: right; color: white">Log In</a>
  </div>
</div>
</div>

<!-- The Modal -->
<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'"
class="close" title="Close Modal">&times;</span>

  <!-- Modal Content -->
  <form class="modal-content animate">

    <div class="container">
      <label for="uname"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" id="uname" runat="server" name="uname" required>

      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" id="psw" runat="server" name="psw" required>

      <button onclick=loginClicked()>Login</button>
      <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
      </label>
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
      <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
  </form>
</div>

    <div style="width: 100%; height: 100%;">
        <main role="main" style="width: 100%;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: white; position: fixed">
        <div class="container">
            &copy; 2023 - SportsScores - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/showLoginPage.js" asp-append-version="true"></script>
    <script src="~/js/verifyUser.js" asp-append-version="true"></script>

    <script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

function loginClicked(){
  username = document.getElementById("uname").value;
  password = document.getElementById("psw").value;
  if(verifyUser(username, password) === true){
    var modal = document.getElementById('id01');
    modal.style.display = "none";
    var acountHomeBtn = document.getElementById('id02');
    acountHomeBtn.style.display = "block";
    var signUpBtn = document.getElementById('id03');
    signUpBtn.style.display = "none";
    var loginBtn = document.getElementById('id04');
    loginBtn.style.display = "none";
  }
}
</script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>